<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexander.imperiumromanum.MainScreen"
    android:weightSum="1"
    android:orientation="vertical">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.example.alexander.imperiumromanum.frag_main.Main_Top"
        tools:layout="@layout/main_top"
        android:id="@+id/fragment"
        android:layout_gravity="center" />

    <fragment
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:name="com.example.alexander.imperiumromanum.frag_main.Main_Table"
        tools:layout="@layout/main_table"
        android:id="@+id/fragment2"
        android:layout_alignTop="@+id/fragment3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:layout_gravity="center" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.example.alexander.imperiumromanum.frag_main.Main_Bottom"
        tools:layout="@layout/main_bottom"
        android:id="@+id/fragment3"
        android:layout_marginTop="46dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center" />
</LinearLayout>
</ScrollView>