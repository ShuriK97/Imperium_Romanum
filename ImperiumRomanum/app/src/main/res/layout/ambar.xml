<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="Амбар"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/ambarTitle"
        android:layout_column="0"
        android:layout_row="0"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="36sp"
        android:textColor="#000000"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Распределение зерна на следующий год."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_description"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:text="После распределения остаётся 0 тонн зерна."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_seed_remains"
        android:layout_below="@+id/txt_description"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_column="1"
        android:layout_row="0"
        android:textSize="10sp"
        android:textColor="#000000" />

    <GridLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:layout_width="wrap_content"
        android:id="@+id/seek"
        android:layout_below="@+id/txt_seed_remains"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center">

        <TextView
            android:layout_height="wrap_content"
            android:text="Выделение зерна на хлеб для граждан Римской империи."
            android:ems="10"
            android:id="@+id/txt_description_bread"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="0"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:textSize="10sp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="200dp" />

        <TextView
            android:layout_height="wrap_content"
            android:text="0"
            android:ems="10"
            android:id="@+id/txt_seed_bread"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="70dp" />

        <SeekBar
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/seek_bar_bread"
            android:layout_below="@+id/txt_seed_remains"
            android:layout_alignEnd="@+id/txt_description"
            android:layout_alignStart="@+id/txt_description"
            android:layout_gravity="top|right"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="150dp" />

        <TextView
            android:layout_height="wrap_content"
            android:text="0"
            android:ems="10"
            android:id="@+id/txt_seed_bread_percent"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_gravity="top|center"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="30dp" />

        <TextView
            android:layout_height="wrap_content"
            android:text="Выделение зерна на засев полей."
            android:ems="10"
            android:id="@+id/txt_description_bread"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="2"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="200dp" />

        <TextView
        android:layout_height="wrap_content"
        android:text="0"
        android:ems="10"
        android:id="@+id/txt_seeding"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_gravity="center"
        android:textSize="10sp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:layout_width="70dp" />

        <SeekBar
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/seek_bar_seeding"
        android:layout_below="@+id/seek_bar_bread"
        android:layout_alignStart="@+id/seek_bar_bread"
        android:layout_alignEnd="@+id/seek_bar_bread"
        android:layout_gravity="top|right"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_width="150dp" />

        <TextView
            android:layout_height="wrap_content"
            android:text="0"
            android:ems="10"
            android:id="@+id/txt_seeding_percent"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_gravity="top|center"
            android:textSize="10sp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:layout_width="30dp" />
    </GridLayout>

    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:alignmentMode="alignBounds"
        android:layout_gravity="center"
        android:id="@+id/table_ambar"
        android:layout_below="@+id/seek"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true">


        <TextView
            android:text="Рабы, тыс. душ"
            android:layout_height="wrap_content"
            android:id="@+id/res_slaves"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="#000000"
            android:layout_width="150dp" />

        <TextView
            android:text="Легионеры, сотни чел."
            android:layout_height="wrap_content"
            android:id="@+id/res_army"
            android:layout_row="5"
            android:layout_column="0"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_width="150dp" />

        <TextView
            android:text="Запасы"
            android:layout_height="26dp"
            android:id="@+id/res_count"
            android:layout_row="0"
            android:layout_column="1"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="120dp" />

        <TextView
            android:text="Название"
            android:layout_height="26dp"
            android:id="@+id/res_name"
            android:layout_row="0"
            android:layout_column="0"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="150dp" />

        <TextView
            android:text="Зерно, тонн"
            android:layout_height="wrap_content"
            android:id="@+id/res_seed"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#000000"
            android:layout_width="150dp" />

        <TextView
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:id="@+id/txt_ambar_land"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="120dp" />

        <TextView
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:id="@+id/txt_ambar_seed"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="120dp" />

        <TextView
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:id="@+id/txt_ambar_slaves"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="120dp" />

        <TextView
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:id="@+id/txt_ambar_army"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="120dp" />

        <TextView
            android:text="Земля, сальт"
            android:layout_height="wrap_content"
            android:id="@+id/res_land"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="#000000"
            android:layout_width="150dp" />


    </GridLayout>

    <TextView
        android:text="Рабы загружены на 0%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/txt_slaves_busy"
        android:layout_below="@+id/table_ambar"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_gravity="center" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="140dp"
        app:srcCompat="@drawable/forum2"
        android:id="@+id/imageView8"
        android:layout_alignTop="@+id/button2"
        android:layout_alignStart="@+id/txt_description"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <Button
        android:text="Распределить"
        android:layout_marginTop="20dp"
        android:id="@+id/button2"
        android:layout_below="@+id/txt_slaves_busy"
        android:onClick="allocate"
        android:textColor="#FFFF61"
        android:textSize="14sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:layout_alignEnd="@+id/txt_slaves_busy"
        android:layout_alignStart="@+id/txt_slaves_busy"
        android:layout_height="40dp"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:textAllCaps="false" />

</LinearLayout>
</ScrollView>