<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Коррупция"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView86"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textStyle="normal|bold" />

    <TextView
        android:text="      Кража! Один из сенаторов предал Рим."
        android:layout_height="wrap_content"
        android:id="@+id/textView87"
        android:textColor="#000000"
        android:layout_width="280dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />
    <TextView
        android:text="      Он похитил из императорской казны 1000000 денариев и скрылся."
        android:layout_height="wrap_content"
        android:id="@+id/txt_stolen"
        android:textColor="#000000"
        android:layout_width="280dp"
        android:layout_gravity="center" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="213dp"
        app:srcCompat="@drawable/corruption"
        android:id="@+id/imageView11"
        android:layout_marginTop="10dp" />

    <Button
        android:text="ОК"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/btn_corrupt"
        android:textColor="#FFFF61"
        android:textSize="14sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:onClick="corrupt" />
</LinearLayout>
</ScrollView>