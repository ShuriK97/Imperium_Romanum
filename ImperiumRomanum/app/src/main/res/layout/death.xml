<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Смерть"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView84"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textStyle="normal|bold" />

    <TextView
        android:text="      Вся империя в трауре. Император мёртв. Хорошо, что империя имеет наследника, а значит правление Вашего дома продолжается. "
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView85"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_gravity="center" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="140dp"
        app:srcCompat="@drawable/death"
        android:id="@+id/imageView12"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <Button
        android:text="ОК"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/btn_accept_death"
        android:textColor="#FFFF61"
        android:textSize="14sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:onClick="acceptDeath" />
</LinearLayout>
</ScrollView>