<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Война"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView56"
        android:textAlignment="center"
        android:textSize="36sp"
        android:layout_below="@+id/txt_war_event"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textStyle="normal|bold" />

    <TextView
        android:text="      Рядом с границей империи расположены варвары с отличной от римской культурой."
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_war_event"
        android:layout_below="@+id/txt_empire_forces"
        android:layout_alignEnd="@+id/button20"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_gravity="center" />

    <TextView
        android:text="      Здесь указывается численность врагов."
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_enemy_forces"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:layout_gravity="center" />

    <TextView
        android:text="     А здесь твои силы."
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_empire_forces"
        android:layout_below="@+id/txt_enemy_forces"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="5dp" />

    <TextView
        android:text="      Есть возможность объявить войну варварам."
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_call_war"
        android:layout_above="@+id/textView56"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="280dp"
        app:srcCompat="@drawable/war"
        android:id="@+id/imageView20"
        android:layout_gravity="center"
        android:layout_height="320dp"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_marginTop="10dp">

        <Button
            android:text="Отказаться"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/btn_refuse"
            android:layout_weight="0.36"
            android:textColor="#FFFF61"
            android:background="@drawable/buttonshape"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:layout_marginRight="10dp"
            android:textAllCaps="false"
            android:onClick="refuse" />

        <Button
            android:text="Объявить войну"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/btn_call_war"
            android:layout_weight="0.36"
            android:textColor="#FFFF61"
            android:background="@drawable/buttonshape"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:layout_marginLeft="10dp"
            android:textAllCaps="false"
            android:onClick="callWar" />
    </LinearLayout>

</LinearLayout>
    </ScrollView>