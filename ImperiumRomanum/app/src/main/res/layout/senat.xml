<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Сенат"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView30"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textStyle="normal|bold" />

    <TextView
        android:text="      Император! Сенат созван для оглашения дел за прошедший год в империи."
        android:layout_height="wrap_content"
        android:id="@+id/textView111"
        android:textColor="#000000"
        android:layout_below="@+id/textView30"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="280dp" />

    <TextView
        android:text="      Статистика за БЛА год правления."
        android:layout_height="wrap_content"
        android:id="@+id/txt_year_stats"
        android:textColor="#000000"
        android:layout_below="@+id/textView111"
        android:layout_alignStart="@+id/textView111"
        android:layout_alignEnd="@+id/textView111"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_marginTop="5dp" />

    <GridLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="129dp"
            app:srcCompat="@drawable/food_senat"
            android:id="@+id/imageView4"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center" />

        <TextView
            android:text="      Норма продуктов на граждан составила 100% от необходимой.\n      Толпа больше не в силах терпеть Вашу тиранию, сенат при поддержке граждан и армии с позором изгоняет Вас."
            android:layout_height="wrap_content"
            android:id="@+id/txt_food_info"
            android:textColor="#000000"
            android:layout_below="@+id/textView222"
            android:layout_alignStart="@+id/textView222"
            android:layout_alignEnd="@+id/textView222"
            android:layout_gravity="center"
            android:layout_width="198dp"
            android:layout_column="1"/>
    </GridLayout>

    <GridLayout
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_width="280dp">

        <TextView
            android:text="      Жалование легионеров за прошедший год составило 1000000 денариев.\n      Не хватило денег на содержание всех легионеров. Распущено 1000 сотен человек."
            android:layout_height="wrap_content"
            android:id="@+id/txt_army_info"
            android:textColor="#000000"
            android:layout_below="@+id/food_status"
            android:layout_alignStart="@+id/food_status"
            android:layout_gravity="center"
            android:layout_width="215dp"
            android:layout_column="0"/>

        <ImageView
            android:layout_width="64dp"
            android:layout_height="98dp"
            app:srcCompat="@drawable/army_senat"
            android:id="@+id/imageView5"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center" />
    </GridLayout>

    <TextView
        android:text="      Невероятно благополучная погода обеспечила невиданно высокий урожай. Амбары заполнены доверху - собрано 1000000 тонн зерна!"
        android:layout_height="wrap_content"
        android:id="@+id/txt_crops_info"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_marginTop="5dp" />

    <GridLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="119dp"
            app:srcCompat="@drawable/crime_senat"
            android:id="@+id/imageView6"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center" />

        <TextView
            android:text="      Сильнейшие бедствия обрушились на некоторые провинции империи! Гражданам, лишившимся собственного продовольствия, было выделено 1000000 тонн зерна."
            android:layout_height="wrap_content"
            android:id="@+id/txt_disaster_info"
            android:textColor="#000000"
            android:layout_below="@+id/seed_info"
            android:layout_gravity="center"
            android:layout_width="198dp"
            android:layout_column="1"/>
    </GridLayout>

    <TextView
        android:text="      Численность рабов в империи увеличилась на 1000 тысяч."
        android:layout_height="wrap_content"
        android:id="@+id/txt_slaves_info"
        android:textColor="#000000"
        android:layout_below="@+id/txt_disaster_info"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:text="      Уровень довольства в Вашей империи 200%.\n      Разъярённые граждане врываются в Вашу резиденцию и убивают Вас в Ваших покоях."
        android:layout_height="wrap_content"
        android:id="@+id/txt_happiness_info"
        android:textColor="#000000"
        android:layout_below="@+id/slave_info"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_marginTop="5dp" />

    <Button
        android:text="ОК"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/button7"
        android:textColor="#FFFF61"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:layout_alignStart="@+id/textView39"
        android:layout_alignEnd="@+id/textView39"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView39"
        android:gravity="center_vertical|center_horizontal|center"
        android:onClick="backMain"
        android:layout_gravity="center" />

</LinearLayout>
</ScrollView>