<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="1">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:layout_marginTop="20dp">

        <Button
            android:text="Назад"
            android:layout_height="40dp"
            android:id="@+id/button"
            android:onClick="backMain"
            android:textAllCaps="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="false"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="#FFFF61"
            android:textSize="14sp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:layout_width="90dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp" />

        <TextView
            android:text="Форум             "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="30sp"
            android:layout_alignBottom="@+id/button"
            android:layout_centerHorizontal="true"
            android:layout_row="0"
            android:layout_column="1"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="normal|bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content" />
    </GridLayout>

    <TextView
        android:text="Имперская казна 0 денариев"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_description"
        android:textAlignment="center"
        android:layout_row="1"
        android:layout_column="1"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />

    <GridLayout
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:columnCount="3"
        android:rowCount="11"
        android:id="@+id/table"
        android:layout_below="@+id/txt_description"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center">

        <TextView
            android:text="Запасы"
            android:layout_height="wrap_content"
            android:id="@+id/res"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_width="150dp" />

        <TextView
            android:text="Цена"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_row="0"
            android:layout_column="1"
            android:textColor="#000000"
            android:layout_gravity="center" />

        <TextView
            android:text="Курс"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/rate"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_row="0"
            android:layout_column="2"
            android:textColor="#000000"
            android:layout_gravity="center" />

        <TextView
            android:text="Золото, кг"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gold"
            android:textSize="12sp"
            android:layout_column="0"
            android:layout_row="1"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Земля, сальт"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ground"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Зерно, тонн"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seed"
            android:layout_row="5"
            android:layout_column="0"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Рабы, тыс. душ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slave"
            android:layout_row="7"
            android:layout_column="0"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Легионеры, сотни чел."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/army"
            android:layout_row="9"
            android:layout_column="0"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textStyle="normal|bold" />

        <EditText
            android:text="0"
            android:ems="10"
            android:id="@+id/res_gold"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:textAlignment="center"
            android:inputType="number" />

        <EditText
            android:text="0"
            android:ems="10"
            android:id="@+id/res_land"
            android:layout_row="4"
            android:layout_column="0"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:textAlignment="center"
            android:layout_height="40dp"
            android:inputType="number" />

        <EditText
            android:text="0"
            android:ems="10"
            android:id="@+id/res_seed"
            android:layout_row="6"
            android:layout_column="0"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:textAlignment="center"
            android:layout_height="40dp"
            android:inputType="number" />

        <EditText
            android:text="0"
            android:ems="10"
            android:id="@+id/res_slaves"
            android:layout_row="8"
            android:layout_column="0"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:textAlignment="center"
            android:layout_height="40dp"
            android:inputType="number" />

        <EditText
            android:text="0"
            android:ems="10"
            android:id="@+id/res_army"
            android:layout_row="10"
            android:layout_column="0"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:textAlignment="center"
            android:layout_height="40dp"
            android:inputType="number" />

        <TextView
            android:text="0"
            android:layout_height="wrap_content"
            android:id="@+id/gold_price"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_width="70dp" />

        <TextView
            android:text="0"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/land_price"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textAlignment="center" />

        <TextView
            android:text="0"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/seed_price"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textAlignment="center" />

        <TextView
            android:text="0"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/slaves_price"
            android:layout_row="8"
            android:layout_column="1"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textAlignment="center" />

        <TextView
            android:text="0"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/army_price"
            android:layout_row="10"
            android:layout_column="1"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textAlignment="center" />

        <TextView
            android:text="0"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/gold_rate"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textAlignment="center" />

        <TextView
            android:text="0"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/land_rate"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textAlignment="center" />

        <TextView
            android:text="0"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/seed_rate"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textAlignment="center" />

        <TextView
            android:text="0"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/slaves_rate"
            android:layout_row="8"
            android:layout_column="2"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textAlignment="center" />

        <TextView
            android:text="0"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/army_rate"
            android:layout_row="10"
            android:layout_column="2"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textAlignment="center" />

    </GridLayout>

    <ImageView
        android:layout_height="200dp"
        app:srcCompat="@drawable/forum1"
        android:id="@+id/imageView3"
        android:layout_gravity="center"
        android:layout_width="280dp" />

    <Button
        android:text="OK"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/button18"
        android:onClick="confirm"
        android:layout_below="@+id/table"
        android:textColor="#FFFF61"
        android:textSize="14sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:layout_centerHorizontal="false"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

</LinearLayout>
</ScrollView>