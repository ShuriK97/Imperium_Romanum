<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_centerInParent="false"
    android:layout_gravity="top|center"
    android:layout_width="315dp">

    <Button
        android:text="Форум"
        android:layout_height="40dp"
        android:id="@+id/btn_forum"
        android:textAllCaps="false"
        android:onClick="toForum"
        android:layout_gravity="center"
        android:layout_width="90dp"
        android:textColor="#FFFF61"
        android:textSize="14sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/emblem"
        android:id="@+id/imageView"
        android:layout_width="275dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Казначей"
        android:layout_height="40dp"
        android:id="@+id/btn_finance"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_width="90dp"
        android:onClick="toFinance"
        android:textColor="#FFFF61"
        android:textSize="14sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginTop="30dp" />

    <Button
        android:text="Сенат"
        android:layout_height="40dp"
        android:id="@+id/btn_senat"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_width="90dp"
        android:onClick="toSenat"
        android:gravity="center"
        android:freezesText="false"
        android:textColor="#FFFF61"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="5dp"
        android:textSize="14sp" />

    <Button
        android:text="Править дальше"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:id="@+id/start_events"
        android:layout_row="3"
        android:layout_column="1"
        android:textAllCaps="false"
        android:onClick="toNextYear"
        android:textColor="#FFFF61"
        android:textSize="14sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

</RelativeLayout>