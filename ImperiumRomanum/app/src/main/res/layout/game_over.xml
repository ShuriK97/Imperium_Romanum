<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Римская империя"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView47"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textStyle="normal|bold"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="ИГРА ОКОНЧЕНА"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView48"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textStyle="normal|bold" />

    <TextView
        android:text="      Указывается, почему ты закончил игру."
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_death_cause"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:layout_gravity="center" />

    <ImageView
        android:layout_width="182dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/death_gameover"
        android:id="@+id/img_game_over" />

    <TextView
        android:text="      А здесь время твоего правления."
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_year_final"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="5dp" />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:alignmentMode="alignBounds"
        android:layout_centerInParent="true"
        android:layout_gravity="top|center"
        android:id="@+id/full_table"
        android:layout_marginTop="10dp">


        <TextView
            android:text="Запасы"
            android:layout_width="119dp"
            android:layout_height="26dp"
            android:id="@+id/res_count"
            android:layout_row="0"
            android:layout_column="1"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:text="Название"
            android:layout_width="177dp"
            android:layout_height="26dp"
            android:id="@+id/res_name"
            android:layout_row="0"
            android:layout_column="0"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:text="Золото, кг"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:id="@+id/res_gold"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="#000000" />

        <TextView
            android:text="Земля, сальт"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:id="@+id/res_ground"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#000000" />

        <TextView
            android:text="Рабы, тыс. душ"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:id="@+id/res_slave"
            android:layout_row="5"
            android:layout_column="0"
            android:textColor="#000000" />

        <TextView
            android:text="Зерно, тонн"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:id="@+id/res_seed"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="#000000" />

        <TextView
            android:text="0"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:id="@+id/txt_gold_final"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:text="0"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:id="@+id/txt_land_final"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:text="0"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:id="@+id/txt_seed_final"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:text="0"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:id="@+id/txt_slaves_final"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:text="0"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="6"
            android:id="@+id/txt_army_final"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:text="Легионеры, сотни чел."
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:id="@+id/res_army"
            android:layout_row="6"
            android:layout_column="0"
            android:textColor="#000000" />

        <TextView
            android:text="0"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:id="@+id/txt_money_final"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:text="Монеты, денариев"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:id="@+id/res_coin"
            android:textColor="#000000" />

    </GridLayout>

    <TextView
        android:text="А здесь все твои ресурсы в денариях."
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_estimate_final"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_gravity="center" />

    <Button
        android:text="Начать заново"
        android:layout_height="40dp"
        android:id="@+id/btn_start_over"
        android:textColor="#FFFF61"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:onClick="startOver" />

</LinearLayout>
</ScrollView>