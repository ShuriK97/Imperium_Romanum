<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:text="Казначей"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView40"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="Имперская казна 0 денариев."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_fin_money"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="      Налоги в империи и получение чистого дохода за год."
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView42"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_gravity="center" />

        <GridLayout
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:text=""
                android:ems="10"
                android:id="@+id/txt_tax"
                android:layout_width="100dp"
                android:textSize="14sp"
                android:textAlignment="center"
                tools:text="10000" />

            <SeekBar
                android:layout_height="wrap_content"
                android:id="@+id/seek_bar_tax"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:max="100" />

            <TextView
                android:layout_height="wrap_content"
                android:text="10%"
                android:ems="10"
                android:id="@+id/txt_tax_percent"
                android:layout_width="50dp"
                android:textSize="14sp"
                android:textAlignment="center" />

        </GridLayout>

        <TextView
        android:text="      Установленные налоги изменяют настроение народа на ГГ%"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_diff_happiness"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_gravity="center" />

    <TextView
        android:text="      Уровень довольства в Вашей империи БЛА%."
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_happiness"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_gravity="center" />

    <TextView
        android:text="      Тут граждане могут быть в эйфории."
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_euphoria"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_gravity="center" />

    <TextView
        android:text="      Вы можете оказать материальную помощь бедным и нуждающимся гражданам и повысить настроение империи на 1%, выделив сумму в размере ХА денариев."
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_donation"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_gravity="center" />

        <ImageView
            android:layout_width="280dp"
            app:srcCompat="@drawable/finance"
            android:id="@+id/imageView16"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="195dp" />

        <Button
            android:text="Пожертвовать"
            android:layout_height="40dp"
            android:id="@+id/btn_donate"
            android:layout_gravity="end"
            android:layout_weight="0.02"
            android:textAllCaps="false"
            android:textColor="#FFFF61"
            android:textSize="14sp"
            android:background="@drawable/buttonshape"
            android:onClick="donate"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_marginRight="50dp" />

        <Button
        android:text="Установить налоги"
            android:layout_height="40dp"
        android:id="@+id/btn_set_taxes"
        android:textColor="#FFFF61"
        android:textSize="14sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:onClick="setTaxes" />
</LinearLayout>
</ScrollView>