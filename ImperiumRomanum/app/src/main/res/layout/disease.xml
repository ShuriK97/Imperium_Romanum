<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Болезнь"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView91"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textStyle="normal|bold" />

    <TextView
        android:text="      Император болен! За ваше лечение лекарь просит 1000 денариев."
        android:layout_height="wrap_content"
        android:id="@+id/txt_treat_cost"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_width="280dp"
        android:layout_gravity="center" />
    <TextView
        android:text="      Вы можете выздороветь сами, а можете и нет. Но и лекарство не даёт полной уверенности в Вашем выздоровлении.\n      Будете лечиться?"
        android:layout_height="wrap_content"
        android:id="@+id/textViewXX"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_width="280dp"
        android:layout_gravity="center" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/disease_1"
        android:id="@+id/imageView13"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:text="Отказаться"
            android:layout_height="40dp"
            android:id="@+id/btn_refuse_treat"
            android:layout_weight="1"
            android:textColor="#FFFF61"
            android:background="@drawable/buttonshape"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:layout_width="100dp"
            android:textAllCaps="false"
            android:onClick="refuseTreat" />

        <Button
            android:text="Лечиться"
            android:layout_height="40dp"
            android:id="@+id/btn_treat"
            android:layout_weight="1"
            android:textColor="#FFFF61"
            android:background="@drawable/buttonshape"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:layout_marginLeft="50dp"
            android:layout_width="100dp"
            android:textAllCaps="false"
            android:onClick="treat" />
    </GridLayout>

</LinearLayout>
</ScrollView>