<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Поимка"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView88"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textStyle="normal|bold" />

    <TextView
        android:text="      Сенатор, ограбивший казну, пойман и понёс заслуженное наказание."
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView89"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_gravity="center" />

    <TextView
        android:text="      Здесь инфа о деньгах."
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_money_returned"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_gravity="center" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="202dp"
        app:srcCompat="@drawable/poimka"
        android:id="@+id/imageView17"
        android:layout_gravity="center"
        android:layout_marginTop="5dp" />

    <Button
        android:text="ОК"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/btn_catch"
        android:textColor="#FFFF61"
        android:textSize="14sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:onClick="catchThief" />
</LinearLayout>
    </ScrollView>