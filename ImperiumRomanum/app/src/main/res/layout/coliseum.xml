<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Колизей"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView23"
        android:textSize="36sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textStyle="normal|bold" />

    <TextView
        android:text="      Пришло время выделить средства на проведение следующих гладиаторских боёв, а также скачек на колесницах."
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/textView25"
        android:textAlignment="textStart"
        android:layout_below="@+id/textView23"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:layout_alignStart="@+id/seek_bar_coliseum"
        android:layout_gravity="center" />

    <TextView
        android:text="      Это отличный способ снискать расположение толпы и продемонстрировать богатство и силу империи."
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/textView26"
        android:textAlignment="textStart"
        android:textSize="12sp"
        android:layout_below="@+id/textView25"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_gravity="center" />

    <TextView
        android:text="      Уровень довольства в Вашей империи 100%"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_coliseum_money"
        android:layout_marginTop="5dp"
        android:id="@+id/txt_coliseum_happiness"
        android:layout_alignEnd="@+id/seek_bar_coliseum"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textSize="12sp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_height="wrap_content"
            android:text="0"
            android:ems="10"
            android:id="@+id/txt_coliseum_money"
            android:layout_alignBaseline="@+id/editText2"
            android:layout_alignBottom="@+id/editText2"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView24"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="100dp" />

        <SeekBar
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView24"
            android:id="@+id/seek_bar_coliseum"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_width="150dp" />

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_height="188dp"
            app:srcCompat="@drawable/coliseum_glad2"
            android:id="@+id/imageView10"
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_width="170dp" />

        <ImageView
            android:layout_height="185dp"
            app:srcCompat="@drawable/coliseum_glad1"
            android:id="@+id/imageView9"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_width="170dp" />
    </GridLayout>

    <Button
        android:text="Провести игры"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_coliseum_happiness"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_coliseum_event"
        android:onClick="toColiseumEvent"
        android:textColor="#FFFF61"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:textAllCaps="false" />

</LinearLayout>
</ScrollView>