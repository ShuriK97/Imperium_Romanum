<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:text="Присоединение"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView78"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textStyle="normal|bold" />

    <TextView
        android:text="      Под воздействием ваших сановников один из предводителей земель по соседству изъявил желание присоединиться к Вашей империи.\n      Вы получаете дань в размере:"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView79"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_weight="0.04" />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:alignmentMode="alignBounds"
        android:layout_centerInParent="true"
        android:layout_gravity="top|center"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content">


        <TextView
            android:text="Название"
            android:layout_width="150dp"
            android:layout_height="26dp"
            android:id="@+id/res_name"
            android:layout_row="0"
            android:layout_column="0"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:text="Монеты, денариев"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:id="@+id/res_coin"
            android:textColor="#000000" />

        <TextView
            android:text="Золото, кг"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/res_gold"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="#000000" />

        <TextView
            android:text="Земля, сальт"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/res_ground"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#000000" />

        <TextView
            android:text="Зерно, тонн"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/res_seed"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="#000000" />

        <TextView
            android:text="Рабы, тыс. душ"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/res_slave"
            android:layout_row="5"
            android:layout_column="0"
            android:textColor="#000000" />

        <TextView
            android:text="Легионеры, сотни чел."
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/res_army"
            android:layout_row="6"
            android:layout_column="0"
            android:textColor="#000000" />

        <TextView
            android:text="Запасы"
            android:layout_height="26dp"
            android:id="@+id/res_count"
            android:layout_row="0"
            android:layout_column="1"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="120dp" />

        <TextView
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:id="@+id/txt_gold_trophy"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="120dp" />

        <TextView
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:id="@+id/txt_land_trophy"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="120dp" />

        <TextView
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:id="@+id/txt_seed_trophy"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="120dp" />

        <TextView
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:id="@+id/txt_slaves_trophy"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="120dp" />

        <TextView
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="6"
            android:id="@+id/txt_army_trophy"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="120dp" />

        <TextView
            android:text="0"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:id="@+id/txt_money_trophy"
            android:textAlignment="center"
            android:textColor="#000000" />

    </GridLayout>

    <ImageView
        android:layout_height="209dp"
        app:srcCompat="@drawable/annexation"
        android:id="@+id/imageView2"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="280dp" />

    <Button
        android:text="Принять дань"
        android:layout_height="40dp"
        android:id="@+id/btn_annex"
        android:textColor="#FFFF61"
        android:textSize="14sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:onClick="annex" />
</LinearLayout>
</ScrollView>