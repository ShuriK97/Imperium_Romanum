<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Болезнь"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView94"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textStyle="normal|bold" />

    <TextView
        android:text="      Лекарь, к сожалению, не всесилен, Ваша смерть была предначертана судьбой."
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_disease_event"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_gravity="center" />

    <Button
        android:text="ОК"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/btnDisease"
        android:textColor="#FFFF61"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:onClick="acceptDiseaseEvent" />

</LinearLayout>
</ScrollView>