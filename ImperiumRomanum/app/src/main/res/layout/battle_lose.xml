<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:text="Война"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView73"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textStyle="normal|bold" />

    <TextView
        android:text="ПОРАЖЕНИЕ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView74"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textSize="24sp"
        android:textColor="#000000" />

    <TextView
        android:text="Ваши потери в войне:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView75"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textColor="#000000" />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:alignmentMode="alignBounds"
        android:layout_centerInParent="true"
        android:layout_gravity="top|center"
        android:id="@+id/full_table"
        android:layout_marginTop="5dp">


        <TextView
            android:text="Золото, кг"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/res_gold"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="#000000" />

        <TextView
            android:text="Земля, сальт"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/res_ground"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#000000" />

        <TextView
            android:text="Рабы, тыс. душ"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/res_slave"
            android:layout_row="5"
            android:layout_column="0"
            android:textColor="#000000" />

        <TextView
            android:text="Зерно, тонн"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/res_seed"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="#000000" />

        <TextView
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:id="@+id/txt_gold_war_loss"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="120dp" />

        <TextView
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:id="@+id/txt_land_war_loss"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="120dp" />

        <TextView
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:id="@+id/txt_seed_war_loss"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="120dp" />

        <TextView
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:id="@+id/txt_slaves_war_loss"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="120dp" />

        <TextView
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="6"
            android:id="@+id/txt_army_war_loss"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="120dp" />

        <TextView
            android:text="Легионеры, сотни чел."
            android:layout_height="wrap_content"
            android:id="@+id/res_army"
            android:layout_row="6"
            android:layout_column="0"
            android:textColor="#000000"
            android:layout_width="150dp" />

        <TextView
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:id="@+id/txt_money_war_loss"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="120dp" />

        <TextView
            android:text="Монеты, денариев"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:id="@+id/res_coin"
            android:textColor="#000000" />

        <TextView
            android:text="Название"
            android:layout_height="26dp"
            android:id="@+id/res_name"
            android:layout_row="0"
            android:layout_column="0"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="150dp" />

        <TextView
            android:text="Запасы"
            android:layout_height="26dp"
            android:id="@+id/res_count"
            android:layout_row="0"
            android:layout_column="1"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_width="120dp" />

    </GridLayout>

    <ImageView
        android:layout_height="188dp"
        app:srcCompat="@drawable/battle_lose"
        android:id="@+id/imageView7"
        android:layout_width="280dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center" />

    <Button
        android:text="ОК"
        android:id="@+id/btn_accept_losses"
        android:textColor="#FFFF61"
        android:textSize="14sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:onClick="acceptLosses" />
</LinearLayout>
</ScrollView>